<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="6dp"
    android:layout_marginRight="18dp"
    android:layout_marginLeft="18dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/image_view_farmacia"
            android:layout_width="63dp"
            android:layout_height="63dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/lista_farmacia"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="63dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/linha_vertical_lista_farmacia"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_nome_farmacia_lista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/app_nome_farmacia_lista"
                android:textSize="14sp"
                android:textStyle="bold"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@android:color/black"/>

            <TextView
                android:id="@+id/txt_avaliacao_farmacia_lista"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorAvaliacaoFarmacia"
                android:text="4.8"
                android:fontFamily="@font/roboto_regular"
                android:textSize="12sp"
                android:textStyle="bold"
                android:drawableLeft="@drawable/ic_star_avaliacao_farmacia_lista_24dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/txt_tempo_farmacia_lista"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20-30min"
                    android:textSize="14sp"
                    android:textColor="@color/colorTextosFarmaciasLista"/>

                <ImageView
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:src="@drawable/separador_farmacia_lista"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"/>

                <TextView
                    android:id="@+id/txt_preco_farmacia_lista"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="R$4,90"
                    android:textSize="14sp"
                    android:textColor="@color/colorTextosFarmaciasLista"/>

                <ImageView
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:src="@drawable/separador_farmacia_lista"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"/>

                <TextView
                    android:id="@+id/txt_distancia_farmacia_lista"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3,5Km"
                    android:textSize="14sp"
                    android:textColor="@color/colorTextosFarmaciasLista"/>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>





</androidx.cardview.widget.CardView>